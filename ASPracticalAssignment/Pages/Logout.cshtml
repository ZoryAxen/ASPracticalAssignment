@page
@model ASPracticalAssignment.Pages.LogoutModel
@{
}

<form method="post">
    <div class="container">
            <div class="row justify-content-center">
                <div class="col-sm-12 col-md-12 col-lg-4 m-5">
                    <p class="text-center">Are you sure you want to log out?</p>
                    <p class="row justify-content-center">
                        <button class="btn btn-primary col-2 m-1" asp-page-handler="Logout">Yes</button>
                        <button class="btn btn-light col-2 m-1" asp-page-handler="DontLogout'">No</button>
                    </p>    
                </div>
            </div>
    </div>
</form>